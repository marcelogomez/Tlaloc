<p id="notice"><%= notice %></p>

<h1>Listing Tips</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Content</th>
      <th>Image</th>
      <th>Shown</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.category_id %></td>
        <td><%= tip.content %></td>
        <td><%= tip.image %></td>
        <td><%= tip.shown %></td>
        <td><%= link_to 'Show', tip %></td>
        <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
        <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

